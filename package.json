{
  "name": "vue-starter",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev": "vite",
    "build": "vue-tsc --noEmit && vite build",
    "serve": "vite preview",
    "test": "jest",
    "lint": "eslint ./src --ext .js,.ts,.vue --fix --ignore-path .gitignore"
  },
  "dependencies": {
    "@nanostores/i18n": "^0.5.1",
    "@nanostores/persistent": "^0.5.3",
    "@nanostores/vue": "^0.5.5",
    "axios": "^0.27.2",
    "lodash": "^4.17.21",
    "nanostores": "^0.5.12",
    "nprogress": "^0.2.0",
    "rxjs": "^7.5.5",
    "vee-validate": "^4.5.11",
    "vue": "^3.2.37",
    "vue-router": "^4.0.16"
  },
  "devDependencies": {
    "@babel/core": "^7.18.6",
    "@babel/preset-env": "^7.18.6",
    "@babel/preset-typescript": "^7.18.6",
    "@testing-library/cypress": "^8.0.3",
    "@types/jest": "^28.1.3",
    "@types/lodash": "^4.14.182",
    "@types/nprogress": "^0.2.0",
    "@typescript-eslint/eslint-plugin": "^5.30.0",
    "@typescript-eslint/parser": "^5.30.0",
    "@vitejs/plugin-vue": "^2.3.3",
    "@vue/compiler-sfc": "^3.2.37",
    "@vue/eslint-config-typescript": "^11.0.0",
    "@vue/test-utils": "^2.0.0",
    "@vue/vue3-jest": "^28.0.1",
    "autoprefixer": "^10.4.7",
    "babel-jest": "^28.1.1",
    "eslint": "^8.18.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-cypress": "^2.12.1",
    "eslint-plugin-prettier": "^4.1.0",
    "eslint-plugin-vue": "^9.1.1",
    "husky": "^8.0.1",
    "jest": "^28.1.1",
    "jest-environment-jsdom": "^28.1.1",
    "lint-staged": "^13.0.3",
    "postcss": "^8.4.14",
    "postcss-html": "^1.4.1",
    "prettier": "^2.7.1",
    "sass": "^1.53.0",
    "tailwindcss": "^3.1.4",
    "ts-jest": "^28.0.5",
    "typescript": "^4.7.4",
    "vite": "^2.9.13",
    "vue-eslint-parser": "^9.0.3",
    "vue-tsc": "^0.38.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "**/*.{js,ts,vue}": [
      "prettier --write",
      "eslint --fix",
      "jest --bail --findRelatedTests",
      "git add"
    ],
    "**/*.{css,scss,html,json,md,yml}": [
      "prettier --write",
      "git add"
    ]
  }
}
